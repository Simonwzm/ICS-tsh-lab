{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out", // Output file with .out extension
                "-L",
                ".",
                "-lcsapp", // Ensure there's no space between -l and csapp
                "-Wl,-rpath=${workspaceFolder}" // Pass the rpath argument to the linker correctly
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build with dynamic link to the csapp library."
        }
    ],
    "version": "2.0.0"
}
